<pq:survey xmlns:pq="http://paths.sheffield.ac.uk/pyquest" title="A survey with a choice point">
  <pq:summary/>
  <pq:language>en</pq:language>
  <pq:styles/>
  <pq:scripts/>
  <pq:first_page>choice</pq:first_page>
  <pq:qsheet name="choice" title="Transition choice">
    <pq:styles/>
    <pq:scripts/>
    <pq:attribute name="repeat">single</pq:attribute>
    <pq:attribute name="data-items">0</pq:attribute>
    <pq:attribute name="control-items">0</pq:attribute>
    <pq:attribute name="show-question-numbers">no</pq:attribute>
    <pq:questions>
      <pq:question>
        <pq:type>text</pq:type>
        <pq:attribute name="text.text">
          <p>
    Here the participant can choose which way to go based on their answer</p>
        </pq:attribute>
      </pq:question>
      <pq:question>
        <pq:type>single_choice</pq:type>
        <pq:name>gender</pq:name>
        <pq:title>This is a (required) pq:short_text question</pq:title>
        <pq:help>Just a bit of help</pq:help>
        <pq:required>true</pq:required>
        <pq:attribute name="further.subtype">table</pq:attribute>
        <pq:attribute_group name="answer">
          <pq:attribute>
            <pq:value name="value">female</pq:value>
            <pq:value name="label">Female</pq:value>
          </pq:attribute>
          <pq:attribute>
            <pq:value name="value">male</pq:value>
            <pq:value name="label">Male</pq:value>
          </pq:attribute>
        </pq:attribute_group>
        <pq:attribute name="further.allow_other">no</pq:attribute>
      </pq:question>
    </pq:questions>
  </pq:qsheet>
  <pq:qsheet name="female" title="Female">
    <pq:styles/>
    <pq:scripts/>
    <pq:attribute name="repeat">single</pq:attribute>
    <pq:attribute name="data-items">0</pq:attribute>
    <pq:attribute name="control-items">0</pq:attribute>
    <pq:attribute name="show-question-numbers">no</pq:attribute>
    <pq:questions>
      <pq:question>
        <pq:type>text</pq:type>
        <pq:attribute name="text.text">
          <p>
    You selected "female".</p>
        </pq:attribute>
      </pq:question>
    </pq:questions>
  </pq:qsheet>
  <pq:qsheet name="male" title="Male">
    <pq:styles/>
    <pq:scripts/>
    <pq:attribute name="repeat">single</pq:attribute>
    <pq:attribute name="data-items">0</pq:attribute>
    <pq:attribute name="control-items">0</pq:attribute>
    <pq:attribute name="show-question-numbers">no</pq:attribute>
    <pq:questions>
      <pq:question>
        <pq:type>text</pq:type>
        <pq:attribute name="text.text">
          <p>
    You selected "male".</p>
        </pq:attribute>
      </pq:question>
    </pq:questions>
  </pq:qsheet>
  <pq:transition from="choice" to="female" order="0">
    <pq:condition>
      <pq:answer question="choice.gender" answer="female"/>
    </pq:condition>
  </pq:transition>
  <pq:transition from="choice" to="male" order="1">
    <pq:condition>
      <pq:answer question="choice.gender" answer="male"/>
    </pq:condition>
  </pq:transition>
</pq:survey>
